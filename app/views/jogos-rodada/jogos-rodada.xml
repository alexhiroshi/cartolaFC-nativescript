<Page loaded="pageLoaded">
	<ListView items="{{ partidas }}">
		<ListView.itemTemplate>
			<GridLayout rows="*, auto" marginBottom="10">
				<StackLayout orientation="horizontal" horizontalAlignment="center">
					<Image src="{{ clubeCasaEscudo }}" width="40" height="40" cssClass="escuto" />
					<Label text="{{ clubeCasa }}" />

					<Label text="x" cssClass="contra" />

					<Label text="{{ clubeVisitante }}" />
					<Image src="{{ clubeVisitanteEscudo }}" width="40" height="40" cssClass="escuto" />
				</StackLayout>
				<StackLayout horizontalAlignment="center" row="1">
					<Label text="{{ local }}" cssClass="local-jogo" />
				</StackLayout>
			</GridLayout>
		</ListView.itemTemplate>
	</ListView>
</Page>